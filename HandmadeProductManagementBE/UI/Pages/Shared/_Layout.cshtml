<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/output.css">
</head>
<body class="bg-gray-100">

    <!-- Header -->
    <header class="bg-white shadow">
        <nav class="container mx-auto flex justify-between items-center py-4">
            <a class="text-lg font-bold" asp-area="" asp-page="/Index">Handmade Product</a>
            <div class="space-x-4">
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Index">Home</a>
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mx-auto py-6">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t py-4">
        <div class="container mx-auto text-center text-gray-600">
            &copy; 2024 - UI - <a class="text-blue-600 hover:underline" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
