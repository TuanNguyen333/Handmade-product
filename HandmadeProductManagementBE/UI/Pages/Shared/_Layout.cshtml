<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/output.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
</head>
<body class="bg-gray-100">

    <!-- Header -->
    <header class="bg-white shadow">
        <nav class="container mx-auto flex items-center justify-between py-4">
            <a class="text-4xl font-bold" asp-area="" asp-page="/Index">Handmade Product</a>
            <div class="space-x-4">
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Index">Home</a>
                <div class="group relative inline-block text-left">
                    <button id="menu-button" class="text-gray-700 hover:text-blue-600">
                        Category
                        <i class="fa fa-caret-down ml-2"></i>
                    </button>
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Privacy">Privacy</a>
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Product/ProductList">Product</a>
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Product/ProductSeller">ProductSeller</a>

                @await Component.InvokeAsync("CategoryMenu")
                <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/Review/Index">Reviews</a>
                @using Microsoft.AspNetCore.Http

                @{
                    var token = Context.Session.GetString("Token");
                }

                @if (!string.IsNullOrEmpty(token))
                {
                    <a class="text-gray-700 hover:text-blue-600" asp-area="" asp-page="/UserInfo/UserInfo">My Account</a>
                }
                @if (Context.Session.GetString("Token") != null)
                {
                    <span class="bg-blue-600 text-white font-semibold rounded-lg px-3 py-1 shadow-md">
                        Welcome, @Context.Session.GetString("UserName")
                    </span>
                }
                else
                {
                <a asp-page="/Login">
                    <button class="rounded-lg bg-cyan-600 px-4 py-2 font-semibold text-white transition duration-300 hover:bg-cyan-700" asp-area="" asp-page="/Login">Login</button>
                </a>
                }
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mx-auto py-6">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-t bg-white py-4">
        <div class="container mx-auto text-center text-gray-600">
            &copy; 2024 - UI - <a class="text-blue-600 hover:underline" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
