@page "{id?}"
@model UI.Pages.Promotion.EditModel
@{
    ViewData["Title"] = "Edit Promotion";
}

<h1>Edit Promotion</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Promotion.Name"></label>
        <input asp-for="Promotion.Name" class="form-control" />
        <span asp-validation-for="Promotion.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Promotion.Description"></label>
        <textarea asp-for="Promotion.Description" class="form-control"></textarea>
        <span asp-validation-for="Promotion.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Promotion.StartDate"></label>
        <input asp-for="Promotion.StartDate" class="form-control" type="date" />
        <span asp-validation-for="Promotion.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Promotion.EndDate"></label>
        <input asp-for="Promotion.EndDate" class="form-control" type="date" />
        <span asp-validation-for="Promotion.EndDate" class="text-danger"></span>
    </div>
    <!-- Add other fields as necessary -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
