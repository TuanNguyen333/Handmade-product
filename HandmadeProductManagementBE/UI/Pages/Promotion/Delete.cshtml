@page
@model UI.Pages.Promotion.DeleteModel
@{
    ViewData["Title"] = "Delete Promotion";
}

<h1>Delete Promotion</h1>

<h3>Are you sure you want to delete this promotion?</h3>

<div>
    <h4>Promotion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Promotion.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Promotion.Description
        </dd>
        <dt class="col-sm-2">
            Discount Rate
        </dt>
        <dd class="col-sm-10">
            @Model.Promotion.DiscountRate
        </dd>

        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.Promotion.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.Promotion.EndDate.ToShortDateString()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Promotion.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
