@page "{reviewId}"
@model UI.Pages.Review.DetailsModel
@{
    ViewData["Title"] = "Review Details";
}

<h1 class="text-4xl font-bold text-center text-blue-600 mb-6">Review Details</h1>

<div class="min-w-[500px] max-w-xl w-auto mx-auto p-4 bg-white rounded-lg shadow-md border border-gray-300">
    <div class="mb-6 flex items-center border-b border-gray-300 pb-4">
        <h4 class="text-lg font-semibold text-black min-w-[100px]">Content:</h4>
        <p class="ml-6 text-black">@Model.Review.Content</p> 
    </div>

    <div class="mb-6 flex items-center border-b border-gray-300 pb-4">
        <h4 class="text-lg font-semibold text-black min-w-[100px]">Rating:</h4>
        <p class="ml-6 text-black">@Model.Review.Rating</p> 
    </div>

    <div class="mb-6 flex items-center border-b border-gray-300 pb-4">
        <h4 class="text-lg font-semibold text-black min-w-[100px]">Product ID:</h4>
        <p class="ml-6 text-black">@Model.Review.ProductId</p>
    </div>

    <div class="mb-6 flex items-center border-b border-gray-300 pb-4">
        <h4 class="text-lg font-semibold text-black min-w-[100px]">User ID:</h4>
        <p class="ml-6 text-black">@Model.Review.UserId</p>
    </div>

    <a asp-page="Index" class="inline-block mt-6 px-4 py-2 bg-blue-600 text-white font-bold rounded hover:bg-blue-700 transition duration-300">
        Back to list
    </a>
</div>